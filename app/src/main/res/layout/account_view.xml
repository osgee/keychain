<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="70dp"
    android:background="@color/gray_account_view"
    android:layout_marginBottom="1dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/iv_app_logo"
                android:src="@drawable/logo"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_app_logo">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingLeft="20dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/relativeLayout">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:id="@+id/tv_account_name"
                        android:text="Account Name"
                        android:textSize="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:id="@+id/tv_password"
                        android:text="password"
                        android:textSize="14dp"
                        android:layout_below="@+id/tv_account_name"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:id="@+id/rl_show_password"
                    android:clickable="true"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true">

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_lock"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:focusable="false"
                        android:layout_marginRight="16dp"
                        android:background="@mipmap/ic_action_eye_closed"/>
                </RelativeLayout>

            </RelativeLayout>

</RelativeLayout>